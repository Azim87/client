<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorForwardButton</item>
        <item name="android:statusBarColor" tools:targetApi="m">#FFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClientSplashScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/main_logo_screen</item>
        <item name="android:statusBarColor" tools:targetApi="m">#FFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewMain">
        <item name="android:layout_margin">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:text">@string/main_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextViewMain2">
        <item name="android:layout_margin">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:text">@string/main_auth_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="EditTextPhoneNumber">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">9</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="ButtonBackStyle">
        <item name="android:text">@string/back_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="ButtonForwardStyle">
        <item name="android:text">@string/reg_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/colorForwardButton</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
