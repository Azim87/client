<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/chat_message_style"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_message_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingEnd="7dp"
            android:maxLines="100"
            android:paddingBottom="4dp"
            android:text="Сообщение"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat_time_1"
            app:layout_constraintBottom_toBottomOf="@+id/container_1"/>

        <TextView
            android:id="@+id/chat_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="7dp"
            android:text="12:33"
            android:textSize="13sp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@id/text_message_1"
            app:layout_constraintEnd_toEndOf="@id/container_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/chat_message_from_style"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingLeft="7dp"
            android:paddingEnd="9dp"
            android:text="Сообщение"
            android:paddingBottom="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/container_2"
            app:layout_constraintStart_toEndOf="@+id/chat_time_2" />

        <TextView
            android:id="@+id/chat_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:text="12:33"
            android:textSize="13sp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_message_2"
            app:layout_constraintEnd_toEndOf="@+id/text_message_2"
            app:layout_constraintStart_toStartOf="@+id/text_message_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>